program Amina;
var
  a: Integer;       // Десятичное число
  b, c: String;     // Строки для двоичного и шестнадцатеричного представлений
  i: Integer;       // Выбор действия
function nD(n: Integer): String;// Функция перевода десятичного числа в двоичную систему
var
  bR: String;       // Локальная переменная для хранения двоичного результата
begin
  if n = 0 then
    nD := '0'      // Возвращаем "0", если введено 0
  else
  begin
    bR := '';
    while n > 0 do
    begin
      bR := Chr((n mod 2) + Ord('0')) + bR; // Остаток от деления на 2 добавляем в результат
      n := n div 2; // Делим на 2
    end;
    nD := bR;  // Возвращаем результат
  end;
end;
function DecimalTo(n: Integer): String;// Функция перевода десятичного числа в восьмеричную систему
var
  ocR: String; // Локальная переменная для хранения восьмеричного результата
begin
  if n = 0 then
    DecimalTo := '0' // Возвращаем "0", если введено 0
  else
  begin
    ocR := '';
    while n > 0 do
    begin
      ocR := Chr((n mod 8) + Ord('0')) + ocR; // Остаток от деления на 8 добавляем в результат
      n := n div 8; // Делим на 8
    end;
    DecimalTo := ocR; // Возвращаем результат
  end;
end;
function Tox(n: Integer): String;// Функция перевода десятичного числа в шестнадцатеричную систему
var
  hel: String; // Локальная переменная для хранения шестнадцатеричного результата
  digit: Integer;
begin
  if n = 0 then
    Tox := '0' // Возвращаем "0", если введено 0
  else
  begin
    hel := '';
    while n > 0 do
    begin
      digit := n mod 16; // Получаем последний разряд
      if digit < 10 then
        hel := Chr(digit + Ord('0')) + hel // Цифры 0-9
      else
        hel := Chr(digit - 10 + Ord('A')) + hel; // Буквы A-F
      n := n div 16; // Делим на 16
    end;
    Tox := hel; // Возвращаем результат
  end;
end;
function Bil(b: String): Integer;// Функция перевода двоичного числа в десятичную систему
var
  j: Integer;
begin
  Result := 0;
  for j := 1 to Length(b) do
  begin
    Result := Result * 2 + Ord(b[j]) - Ord('0'); // Умножаем на 2 и добавляем значение цифры
  end;
end;
function mal(h: String): Integer;// Функция перевода шестнадцатеричного числа в десятичную систему
var
  j, value: Integer;
begin
  Result := 0;
  for j := 1 to Length(h) do
  begin
    if h[j] in ['0'..'9'] then
      value := Ord(h[j]) - Ord('0') // Цифры от 0 до 9
    else if h[j] in ['A'..'F'] then
      value := Ord(h[j]) - Ord('A') + 10 // Буквы от A до F
    else if h[j] in ['a'..'f'] then
      value := Ord(h[j]) - Ord('a') + 10; // Буквы от a до f

    Result := Result * 16 + value; // Умножаем на 16 и добавляем значение
  end;
end;

begin
  // Главное меню выбора действия
  WriteLn('Выберите действие:');
  WriteLn('1. Десятичное в двоичное');
  WriteLn('2. Десятичное в восьмеричное');
  WriteLn('3. Десятичное в шестнадцатеричное');
  WriteLn('4. Двоичное в десятичное');
  WriteLn('5. Шестнадцатеричное в десятичное');
  Write('Ваш выбор: ');
  ReadLn(i);

  // Обработка выбора пользователя
  case i of
    1:
    begin
      Write('Введите десятичное число: ');
      ReadLn(a);
      WriteLn('Двоичное представление: ', nD(a));  // Вызов функции nD
    end;
    
    2:
    begin
      Write('Введите десятичное число: ');
      ReadLn(a);
      WriteLn('Восьмеричное представление: ', DecimalTo(a));
    end;
    3:
    begin
      Write('Введите десятичное число: ');
      ReadLn(a);
      WriteLn('Шестнадцатеричное представление: ', Tox(a));
    end;
    4:
    begin
      Write('Введите двоичное число: ');
      ReadLn(b);
      WriteLn('Десятичное представление: ', Bil(b));
    end;
    5:
    begin
      Write('Введите шестнадцатеричное число: ');
      ReadLn(c);
      WriteLn('Десятичное представление: ', mal(c));
    end;
  else
    WriteLn('Некорректный выбор. Пожалуйста, выберите число от 1 до 5.'); // Обработка некорректного ввода
  end;
end.
