program Amina;
var
  num1, num2: Real; // Переменные для хранения введенных чисел
  sum, difference, product, quotient: Real; // Переменные для хранения результатов операций
begin
  // Запрос ввода первого числа
  Write('Введите первое число: ');
  ReadLn(num1);
  // Запрос ввода второго числа
  Write('Введите второе число: ');
  ReadLn(num2);
  // Выполнение арифметических операций
  sum := num1 + num2;
  difference := num1 - num2;
  product := num1 * num2;
  // Проверка на деление на ноль
  if num2 <> 0 then
    quotient := num1 / num2
  else
    quotient := 0; // при делении на 0 устанавливаем результат равным 0 или обрабатываем отдельно
  // Вывод результатов
  WriteLn('Сумма: ', sum:0:2);
  WriteLn('Разность: ', difference:0:2);
  WriteLn('Произведение: ', product:0:2);
  if num2 <> 0 then
    WriteLn('Частное: ', quotient:0:2)
  else
    WriteLn('Частное: деление на ноль невозможно');
end.
